                        android:textSize="12dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tax and Service Charges"
                        android:textColor="@color/Gray"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/textView61"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="N200.00"
                        android:textColor="@color/yellow"
                        android:textSize="12dp" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView24"
                    android:layout_width="342dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="9dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/line" />

                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="4dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView62"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Package total"
                        android:textColor="@color/Gray"
                        android:textSize="12dp"/>

                    <TextView
                        android:id="@+id/textView63"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="N3000.00"
                        android:textColor="@color/yellow"
                        android:textSize="12dp"  />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="342dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="46dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="24dp"
                        android:layout_weight="1"
                        android:text="Edit package"
                        android:onClick="sendapack"
                        android:textColor="@color/Blue"
                        android:backgroundTint="@color/white"
                        app:cornerRadius="8dp"
                        app:strokeColor="#0560FA"
                        app:strokeWidth="1dp"/>

                    <Button
                        android:id="@+id/button5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Make payment"
                        android:onClick="makepayment"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/Blue"
                        app:cornerRadius="8dp"
                        app:strokeColor="#0560FA"
                        app:strokeWidth="1dp"/>
